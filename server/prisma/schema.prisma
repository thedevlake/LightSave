generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  firstname     String
  lastname     String
  email     String   @unique
  password  String
  role      String   @default("USER")   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  goals     Goal[]
  incomes   Income[]
  expenses  Expense[]
}

model Goal {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String   @db.ObjectId
  name      String
  target    Float
  current   Float    @default(0)
  deadline  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  user      User     @relation(fields: [userId], references: [id])
}

model Income {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String   @db.ObjectId
  source    String
  amount    Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  user      User     @relation(fields: [userId], references: [id])
}

model Expense {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String   @db.ObjectId
  category  String
  amount    Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  user      User     @relation(fields: [userId], references: [id])
}